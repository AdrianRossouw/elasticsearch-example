extends layout

block content
  form.pull-right.form-horizontal(action='/', method='GET')
      .input-append
        input.search-query(name='q', type='text', placeholder= 'Search')
        button.btn Go

  - if (q && !results.length)
    | Your search for <strong>#{q}</strong> returned no results.
  - else if (results.length)
    h2 Search results for #{q}
    - each link in results
      article.well
        h1: a(href='/' + link._id) #{link.field_title}
        != summarize(link.field_body);
